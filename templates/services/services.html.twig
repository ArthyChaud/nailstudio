                                            {% set i = 0 %}
                                            {% for media in carousel.medias %}
                                                <li data-target="#carousel-{{ carousel.id }}" data-slide-to="{{ i }}"
                                                    {% if i == 0 %}class="active"{% endif %}></li>
                                                {% set i = i + 1 %}
                                            {% endfor %}
