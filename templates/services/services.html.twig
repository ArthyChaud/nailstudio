                                                    {% if media.type == "png" or media.type == "gif" or media.type == "jpeg" %}
                                                        <img class="d-block w-100"
                                                             src="{{ asset('uploads/services/' ~ media.path) }}"
                                                             alt="{{ media.path }}">
                                                    {% else %}
                                                        <video controls>
                                                            <source src="{{ asset('uploads/services/' ~ media.path) }}">
                                                        </video>
                                                    {% endif %}
                                                    {% if is_granted('ROLE_ADMIN') %}
